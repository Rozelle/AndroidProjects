<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.peepal.shifoo.AddStudent">

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Name"/>

    <AutoCompleteTextView
        android:id="@+id/autoComp"
        style="@style/AutoCompleteTextViewAppTheme"
        android:layout_below="@id/nameTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="10dip"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:width="250dip"
        android:textCursorDrawable="@drawable/colour_cursor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneTv"
        android:layout_below="@id/autoComp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="Phone number"/>

    <EditText
        android:inputType="text|phone"
        style="@style/EditTextAppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="10dp"
        android:hint="10 digits"
        android:textColorHint="#bcbbbb"
        android:id="@+id/number"
        android:layout_below="@id/phoneTv"
        android:textCursorDrawable="@drawable/colour_cursor"/>

    <TextView
        android:id="@+id/amountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Amount"
        android:layout_below="@id/number"/>
    <EditText
        android:inputType="text|number"
        style="@style/EditTextAppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="In Rupees only"
        android:textColorHint="#bcbbbb"
        android:id="@+id/amount"
        android:layout_below="@id/amountTv"
        android:textCursorDrawable="@drawable/colour_cursor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff6600"
        android:text="Save"
        android:textColor="#ffffff"
        android:id="@+id/doneButton"
        android:layout_below="@id/amount"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
