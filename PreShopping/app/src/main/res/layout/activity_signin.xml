<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.preshopping.Signin">

    <TextView android:text="Enter details:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heading1"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:id="@+id/linearSI1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading1"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL ID: "
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/editSI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:layout_marginRight="0dp"
            android:inputType="text" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSI2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearSI1"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD: "
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/editSI2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:layout_marginRight="0dp"
            android:inputType="text" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot"
        android:text="Forgot Password?"
        android:textSize="12dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/linearSI2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:clickable="true"
        android:onClick="textClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmSI"
        android:text="Save and proceed"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgot"
        android:clickable="true"
        android:onClick="ButtonClick"/>

</RelativeLayout>
